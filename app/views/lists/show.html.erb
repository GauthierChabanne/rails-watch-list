<div class="container">
  <h1><%= @list.name %></h1>

   <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
          <div class="col-6 text-center">
            <div class="card-trip m-3">
              <img src="<%= bookmark.movie.poster_url %> "/>
              <div class="card-trip-infos">
                <div>
                  <h2><%= bookmark.movie.title %></h2>
                  <p><%= bookmark.movie.overview %></p>
                </div>
                <h2 class="card-trip-pricing"><%= bookmark.movie.rating %></h2>
                <br>
                <%= link_to "", bookmark_path(bookmark.id), method: :delete, class: "fa fa-trash" %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
    <br>
    <br>
    <%= link_to "+ Add a movie", new_list_bookmark_path(@list.id) %>
    <br>
    <br>
    <%= link_to "All lists",  lists_path %>
</div>
